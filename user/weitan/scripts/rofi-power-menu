#!/usr/bin/env bash
set -e
set -u

# Available options.
option_lock="ğŸ”’ lock screen"
option_suspend="ğŸ˜ª suspend"
option_hibernate="ğŸ’¤ hibernate"
option_reboot="â˜€ï¸ reboot"
option_shutdown="ğŸŒš shutdown"
option_cancel="âŒ cancel"

# Menu passed to rofi.
options="$option_lock\n$option_suspend\n$option_hibernate\n$option_reboot\n$option_shutdown\n$option_cancel"

chosen="$(echo -e "$options" | rofi -dmenu -p "power")"
case $chosen in
  "$option_lock")
    lockscreen
    ;;
  "$option_suspend")
    lockscreen
    systemctl suspend
    ;;
  "$option_hibernate")
    lockscreen
    systemctl hibernate
    ;;
  "$option_reboot")
    systemctl reboot
    ;;
  "$option_shutdown")
    systemctl poweroff
    ;;
  "$option_cancel")
    exit 0
    ;;
esac
